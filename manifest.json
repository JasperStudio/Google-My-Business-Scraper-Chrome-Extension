{
  "manifest_version": 3,
  "name": "Google Business Scraper",
  "version": "0.1.0",
  "description": "Search Google local results for queries and collect business details with CSV export.",
  "action": { "default_popup": "ui/popup.html", "default_title": "GMB Scraper" },
  "permissions": ["activeTab", "scripting", "storage", "downloads", "tabs"],
  "host_permissions": ["https://www.google.com/*", "http://*/*", "https://*/*"],
  "background": { "service_worker": "bg/service-worker.js", "type": "module" },
  "content_scripts": [
    {
      "matches": ["https://www.google.com/search*"],
      "js": ["content/scrape_lcl.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": { "16": "icons/16.png", "48": "icons/48.png", "128": "icons/128.png" }
}

